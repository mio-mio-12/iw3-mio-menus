#define HEALTHBAR( dvarName, mat, n, num ) \
		itemDef \
		{ \
			style			WINDOW_STYLE_SHADER \
			origin			0 0 \
			rect			0 0 128 16 HB_RECT 1 \
			exp				rect X( (-128 * int(dvarName == "allies")) + (127 * (2*int(dvarName == "allies")-1) * dvarfloat("shout_health"+num) ) ); \
