			exp				text( dvarString( "shout_name"+num ) ); \
			textstyle		ITEM_TEXTSTYLE_NORMAL \
			textalign		SHOUT_TEXT_ALIGN \
			textscale		0.36 \
			textfont		UI_FONT_DEFAULT \
			visible			when( dvarString( "shout_name"+num ) != "" && dvarFloat( "shout_health"+num ) != "0" ) \
